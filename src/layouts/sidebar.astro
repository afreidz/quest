---
const { id } = Astro.props;
---

<div class="drawer drawer-end xl:drawer-open">
  <input id={id} type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col items-center justify-start p-4">
    <slot />
  </div>
  <div class="drawer-side">
    <label for={id} aria-label="close sidebar" class="drawer-overlay"></label>
    <div
      class="bg-neutral border-l text-base-content min-h-full min-w-[500px] max-w-[25vw] w-full p-0 relative flex flex-col"
    >
      <slot name="sidebar" />
    </div>
  </div>
</div>
